<div class="container">

  <div class="row">
    <div class="col-sm-12">
      {{>home-header}}
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12">
      <div class="jumbotron text-center">
        <h1>Mongo News Scraper</h1>
      </div>
      {{#each article}}
        <div class="row">
          <div class="col-sm-12">
            <div class="panel panel-default">
              <div class="panel-heading" id="panelHead">
                <h3 class="panel-title">{{this.title}}</h3>
              </div>
              <div class="panel-body">
                <p>{{this.summary}}</p>
                <a href="{{this.link}}">Read more at {{this.link}}</a>
                <form class="navbar-form navbar-right" action="./saved/{{this.id}}?_method=PUT" method="post">
                  <button type="submit" class="btn btn-default" id="savedButton">Save Article</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>

</div>
